<h1>Tecnologías</h1>

<div class="d-flex justify-content-end">
  <%= link_to('Nueva tecnología', new_administration_technology_path, class: 'btn btn-primary mb-3') %>
</div>

<div class="table-responsive" data-controller="sortable" data-sortable-reorder-url-value="<%= reorder_administration_technologies_path %>">
  <table class="table table-hover table-bordered">
    <thead>
      <tr class="text-center">
        <th class="col-1">Orden</th>
        <th class="col-1">ID</th>
        <th class="col-1">Ícono</th>
        <th class="col">Nombre</th>
        <th class="col-4">Acciones</th>
      </tr>
    </thead>
    <tbody data-sortable-target="tableBody">
      <% @technologies.each do |technology| %>
        <tr class="text-center align-middle" data-id="<%= technology.id %>">
          <td><i class="bi bi-arrow-down-up handle"></i></td>
          <td><%= technology.id %></td>
          <td><%= image_tag(url_for(technology.technology_icon), alt: technology.technology_name, style: 'width: 2rem; height: 2rem;') %></td>
          <td><%= technology.technology_name %></td>
          <td>
            <%= link_to('Editar', edit_administration_technology_path(technology), class: 'btn btn-primary mb-md-0 mb-2') %>
            <%= link_to('Eliminar', administration_technology_path(technology), class: 'btn btn-danger mb-md-0', data: { turbo_method: :delete, turbo_confirm: '¿Realmente desea eliminar esta red social?' }) %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
