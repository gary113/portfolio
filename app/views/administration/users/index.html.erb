<h1>Usuarios</h1>

<div class="d-flex justify-content-end">
  <%= link_to('Nuevo usuario', new_administration_user_path, class: 'btn btn-primary mb-3') %>
</div>

<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead>
      <tr class="text-center">
        <th class="col-1">ID</th>
        <th class="col">Usuario</th>
        <th class="col-2">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="text-center align-middle">
          <td><%= user.id %></td>
          <td><%= user.user_name %></td>
          <td>
            <%= link_to('Editar', edit_administration_user_path(user), class: 'btn btn-primary mb-md-0 mb-2') %>
            <% if current_user != user %>
              <%= link_to('Eliminar', administration_user_path(user), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Â¿Realmente desea eliminar este usuario?' }) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
