<% if @current_page_index > 0 %>
  <div class="navigation-arrow arrow-left">
    <%= link_to(@header_list[@current_page_index - 1][:path], data: { application_target: "navLink", action: "click->application#updateNewPageIndex" }) do %>
      <i class="bi bi-arrow-left-circle-fill"></i>
    <% end %>
  </div>
<% end %>

<% if @current_page_index < @header_list.count - 1 %>
  <div class="navigation-arrow arrow-right">
    <%= link_to(@header_list[@current_page_index + 1][:path], data: { application_target: "navLink", action: "click->application#updateNewPageIndex" }) do %>
      <i class="bi bi-arrow-right-circle-fill"></i>
    <% end %>
  </div>
<% end %>
